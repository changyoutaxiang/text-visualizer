{
  "budget": {
    "monthly": {
      "vercel": 20,
      "netlify": 19,
      "aws": 30,
      "cloudflare": 5
    },
    "daily": {
      "vercel": 0.66,
      "netlify": 0.63,
      "aws": 1,
      "cloudflare": 0.16
    }
  },
  "optimization": {
    "cdn": {
      "enabled": true,
      "provider": "cloudflare",
      "cache_duration": 31536000,
      "compression": ["br", "gzip"]
    },
    "image": {
      "compression": "webp",
      "max_width": 1920,
      "quality": 85,
      "lazy_loading": true
    },
    "bundle": {
      "target_size": 500,
      "chunk_splitting": true,
      "tree_shaking": true,
      "minification": true
    },
    "caching": {
      "browser_cache": 31536000,
      "cdn_cache": 31536000,
      "service_worker": true
    }
  },
  "monitoring": {
    "alerts": {
      "daily_spend_threshold": 2,
      "monthly_spend_threshold": 25,
      "usage_threshold": 80
    },
    "reporting": {
      "frequency": "daily",
      "channels": ["email", "slack"]
    }
  },
  "scaling": {
    "auto_scaling": {
      "enabled": false,
      "min_instances": 1,
      "max_instances": 3,
      "cpu_threshold": 70,
      "memory_threshold": 80
    },
    "manual_scaling": {
      "enabled": true,
      "instances": 1
    }
  }
}
# ===========================================
# Text-Visualizer 环境变量配置模板
# 复制此文件为 .env 并填入实际值
# ===========================================

# 必需配置
# OpenRouter API密钥 (从 https://openrouter.ai/keys 获取)
VITE_OPENROUTER_API_KEY=your_api_key_here

# 应用配置
# 应用环境 (development/production)
VITE_ENV=development

# 默认模型配置
VITE_DEFAULT_MODEL=anthropic/claude-sonnet-4

# 可选功能开关
# 是否启用分析统计 (true/false)
VITE_ENABLE_ANALYTICS=false

# 是否启用错误报告 (true/false)
VITE_ENABLE_ERROR_REPORTING=true

# 是否启用缓存 (true/false)
VITE_ENABLE_CACHE=true

# 安全设置
# 应用访问密码 (可选，为空则不启用)
VITE_APP_PASSWORD=

# 允许的来源域名 (逗号分隔)
VITE_ALLOWED_ORIGINS=localhost:3000,localhost:5173

# 性能配置
# 缓存过期时间 (毫秒)
VITE_CACHE_TTL=86400000

# 请求超时时间 (毫秒)
VITE_REQUEST_TIMEOUT=60000

# 最大重试次数
VITE_MAX_RETRIES=3

# 内容限制
# 最大输入字符数
VITE_MAX_INPUT_LENGTH=8000

# 历史记录最大条数
VITE_MAX_HISTORY_ITEMS=100

# 部署配置
# 应用基础URL (用于生产环境)
VITE_BASE_URL=https://your-domain.com

# CDN配置 (可选)
VITE_CDN_URL=

# 监控配置
# 性能监控服务URL (可选)
VITE_PERFORMANCE_MONITOR_URL=

# 错误日志服务URL (可选)
VITE_ERROR_LOG_URL=

# 开发专用
# 模拟模式 (开发环境使用，不调用真实API)
VITE_MOCK_MODE=false

# 调试模式
VITE_DEBUG_MODE=false